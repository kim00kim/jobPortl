<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="ph.kim.jobportl" version="0.5.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
	<name>JobPortl</name>
	<description>A Job Portal Application</description>
	<author email="info@jobportl.com" href="http://www.jobportl.com">jobportl</author>
	<content src="index.html"/>
	<access origin="*"/>
	
	<preference name="phonegap-version" value="3.6.3"/>
	<preference name="orientation" value="portrait"/>
	<preference name="fullscreen" value="false"/>
	<preference name="webviewbounce" value="false"/>
	<preference name="prerendered-icon" value="true"/>

	<!--icons-->
	<platform name="android">
		<icon src="resources\android\icon\drawable-ldpi-icon.png" density="ldpi"/>
		<icon src="resources\android\icon\drawable-mdpi-icon.png" density="mdpi"/>
		<icon src="resources\android\icon\drawable-hdpi-icon.png" density="hdpi"/>
		<icon src="resources\android\icon\drawable-xhdpi-icon.png" density="xhdpi"/>
		<icon src="resources\android\icon\drawable-xxhdpi-icon.png" density="xxhdpi"/>
		<icon src="resources\android\icon\drawable-xxxhdpi-icon.png" density="xxxhdpi"/>
	</platform>
	<icon src="resources\android\icon\drawable-xhdpi-icon.png"/>

	<!--phonegap plugins-->
	<gap:plugin name="com.phonegap.plugins.facebookconnect" version="0.9.0">
		<param name="APP_ID" value="578995458902268"/>
		<param name="APP_NAME" value="JobPortl"/>
	</gap:plugin>
	<gap:plugin name="com.phonegap.plugins.pushplugin" version="2.4.0"/>
	<gap:plugin name="org.apache.cordova.camera" version="0.3.2"/>
	<gap:plugin name="org.apache.cordova.file" version="1.3.1"/>
	<gap:plugin name="nl.x-services.plugins.toast" version="2.0"/>
	<feature name="Toast">
		<param name="android-package" value="nl.xservices.plugins.Toast"/>
	</feature>

	<!--cordova plugins-->
	<resources>
		<string name="fb_app_id">578995458902268</string>
    	<string name="fb_app_name">JobPortl</string>
  	</resources>

	<!--IOS only-->
	<gap:plugin name="com.phonegap.plugin.statusbar"/>
	<feature name="StatusBar">
		<param name="ios-package" value="CDVStatusBar" onload="true"/>
	</feature>
	<preference name="StatusBarOverlaysWebView" value="false"/>
	<preference name="StatusBarBackgroundColor" value="#000000"/>

	<!--Android only-->
	<preference name="android-installLocation" value="auto"/>
	<!-- Allows installing on the SD card -->
</widget>